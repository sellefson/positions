<div class="page-header">
  <h1>
    Districts
    <a href="/districts/new" class="btn btn-lg btn-success">New District</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Name</th>
        <th>Actions</th>
      </tr>

      <% @districts.each do |district| %>
      <tr>
        <td><%= district.name %></td>
        <td>
          <a href="/districts/<%= district.id %>" class="btn btn-primary">Show</a>
          <a href="/districts/<%= district.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_district/<%= district.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
